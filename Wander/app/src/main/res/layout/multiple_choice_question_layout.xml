<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.teamwan.wander.NumberGame">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/quit"
        android:contentDescription="@string/content_description_quit"
        android:id="@+id/quitFromMultiChoice"
        android:clickable="false"
        android:onClick="onClickQuit"
        android:layout_alignParentStart="false"
        android:layout_weight="1"
        android:layout_gravity="bottom" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:weightSum="1"
        android:layout_below="@+id/TitleMultiChoice"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:baselineAligned="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wandertitle"
            android:contentDescription="@string/content_description_title"
            android:id="@+id/TitleMultiChoice"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:baselineAlignBottom="true" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:id="@+id/textViewForQuestion"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_margin="20dp"
            android:freezesText="false"
            android:duplicateParentState="false"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:layout_height="60dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:onClick="onClickCheckBox"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="CheckBox"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:theme="@style/WanderCheckBox" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="onClickCheckBox"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:text="CheckBox"
                android:textColor="@color/colorPrimaryDark"
                android:theme="@style/WanderCheckBox" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="onClickCheckBox"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="CheckBox"
                android:textColor="@color/colorPrimaryDark"
                android:theme="@style/WanderCheckBox" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="onClickCheckBox"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="CheckBox"
                android:textColor="@color/colorPrimaryDark"
                android:theme="@style/WanderCheckBox" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="onClickCheckBox"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="CheckBox"
                android:textColor="@color/colorPrimaryDark"
                android:theme="@style/WanderCheckBox" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="onClickCheckBox"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="CheckBox"
                android:textColor="@color/colorPrimaryDark"
                android:theme="@style/WanderCheckBox" />
        </LinearLayout>

        <TextView
            android:id="@+id/ConfirmMultiChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:onClick="onClickConfirm"
            android:paddingTop="8dp"
            android:text="@string/Confirm"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="26sp" />

    </LinearLayout>

</FrameLayout>
